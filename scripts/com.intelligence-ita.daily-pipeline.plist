<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.org/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Job identifier -->
    <key>Label</key>
    <string>com.intelligence-ita.daily-pipeline</string>

    <!-- Command to execute (caffeinate prevents sleep during execution) -->
    <key>ProgramArguments</key>
    <array>
        <string>/usr/bin/caffeinate</string>
        <string>-i</string>
        <string>/Users/tommasofazzi/INTELLIGENCE_ITA/INTELLIGENCE_ITA/venv/bin/python</string>
        <string>/Users/tommasofazzi/INTELLIGENCE_ITA/INTELLIGENCE_ITA/scripts/daily_pipeline.py</string>
    </array>

    <!-- Working directory -->
    <key>WorkingDirectory</key>
    <string>/Users/tommasofazzi/INTELLIGENCE_ITA/INTELLIGENCE_ITA</string>

    <!-- Schedule: every day at 8:00 AM -->
    <key>StartCalendarInterval</key>
    <dict>
        <key>Hour</key>
        <integer>8</integer>
        <key>Minute</key>
        <integer>0</integer>
    </dict>

    <!-- Log output -->
    <key>StandardOutPath</key>
    <string>/Users/tommasofazzi/INTELLIGENCE_ITA/INTELLIGENCE_ITA/logs/launchd_stdout.log</string>

    <key>StandardErrorPath</key>
    <string>/Users/tommasofazzi/INTELLIGENCE_ITA/INTELLIGENCE_ITA/logs/launchd_stderr.log</string>

    <!-- Environment variables -->
    <key>EnvironmentVariables</key>
    <dict>
        <key>PATH</key>
        <string>/usr/local/bin:/usr/bin:/bin:/Users/tommasofazzi/INTELLIGENCE_ITA/INTELLIGENCE_ITA/venv/bin</string>
        <key>PYTHONPATH</key>
        <string>/Users/tommasofazzi/INTELLIGENCE_ITA/INTELLIGENCE_ITA</string>
    </dict>

    <!-- Run missed jobs when waking from sleep -->
    <key>StartInterval</key>
    <false/>
</dict>
</plist>
